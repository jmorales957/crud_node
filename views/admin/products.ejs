<!doctype html>
<html lang="en">
<%- include('../includes/head.ejs') %>
<body>
<%- include('../includes/header.ejs') %>

<div class="content">
    <div class="row">
        <h1 class="center-align">Products Admin</h1>
    </div>
    <% if(prods.length > 0) { %>
        <div class="row">
            <% for (let product of prods) { %>
                <div class="col s4">
                    <div class="card">
                        <div class="card-image">
                            <img src="<%= product.imageUrl%>">
                            <span class="card-title"><%= product.title%></span>
                        </div>
                        <div class="card-content">
                            <p>I<%= product.description%></p>
                        </div>
                        <div class="card-action">
                            <a href="#">$ <%= product.price%></a>
                            <a href="/admin/edit-product/<%= product.id%>" class="waves-effect waves-light yellow btn"><i class="material-icons right">edit</i></a>
                            <form action="/admin/delete-product" method="post">
                                <input type="hidden" value="<%= product.id%>" name="id">
                                <button class="waves-effect waves-light red btn"><i class="material-icons right">do_not_disturb_alt</i></button>
                            </form>

                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    <% }else { %>
        <h1 class="center-align">No products</h1>
    <% } %>

</div>
</body>
</html>