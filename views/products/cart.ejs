<!doctype html>
<html lang="en">
<%- include('../includes/head.ejs') %>
<body>
<%- include('../includes/header.ejs') %>

<div class="content">
    <div class="row">
        <h1 class="center-align">Cart</h1>
    </div>
    <% if(prods.length > 0) { %>
        <div class="row">
            <% for (let product of prods) { %>
                <div class="col s4">
                    <div class="card">
                        <div class="card-image">
                            <img src="<%= product.productData.imageUrl%>">
                            <span class="card-title"><%= product.productData.title%></span>
                        </div>
                        <div class="card-content">
                            <p>Description: <%= product.productData.description%></p>
                            <p href="#">Price: $ <%= product.productData.price%></p>
                        </div>
                        <div class="card-action">
                            <p>Quantity: <%= product.qty%></p>
                            <form action="/delete-to-cart" method="post">
                                <input type="hidden" name="id" value="<%= product.productData.id%>">
                                <button class="waves-effect waves-light red btn">Delete to Cart</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    <% }else { %>
        <h1 class="center-align">No products</h1>
    <% } %>

</div>
</body>
</html>