<!doctype html>
<html lang="en">
<%- include('../includes/head.ejs') %>
<body>
<%- include('../includes/header.ejs') %>

<div class="content">
    <div class="card">
        <div class="card-image waves-effect waves-block waves-light">
            <img class="activator" src="<%= product.imageUrl%>">
        </div>
        <div class="card-content">
            <span class="card-title activator grey-text text-darken-4"><%= product.title%><i class="material-icons right">more_vert</i></span>
            <p>Price: <%= product.price%></p>
        </div>
        <div class="card-reveal">
            <span class="card-title grey-text text-darken-4">Name: <%= product.title%><i class="material-icons right">close</i></span>
            <p>Description: <%= product.description%></p>
            <form action="/cart" method="post">
                <input type="hidden" name="id" value="<%= product.id%>">
                <button class="waves-effect waves-light green btn">Add to Cart</button>
            </form>
        </div>
    </div>

</div>

</body>
</html>