<!doctype html>
<html lang="en">
<%- include('../includes/head.ejs')%>
<body>
<%- include('../includes/header.ejs')%>
<div class="content">
    <div class="row">
        <form class="col s12" method="post" action="/admin/add-product">
            <div class="row">
                <div class="input-field col s6">
                    <input placeholder="Product" id="product" type="text"  name ="title" class="validate">
                    <label for="product">Product</label>
                </div>
                <div class="input-field col s6">
                    <input id="image" type="text" name="image" class="validate">
                    <label for="image">Image Url</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input id="description" type="text" name="description" class="validate">
                    <label for="description">Description</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input id="price" type="number" name="price" class="validate">
                    <label for="price">Price</label>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <button class="btn waves-effect waves-light orange" type="submit" name="action">Add

                    </button>
                </div>
            </div>
        </form>
    </div>
</div>


</body>
</html>